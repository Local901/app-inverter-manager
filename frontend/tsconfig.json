{
  "compilerOptions": {
    "esModuleInterop": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "types": [
      "vite/client"
    ],
    "typeRoots": [
      "node_modules",
      "node_modules/@types",
      "src/types",
    ],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "isolatedModules": true,
    "lib": [
      "DOM",
      "ESNext"
    ],
    "strict": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "target": "ESNext",
    "resolveJsonModule": true
  },
  "include": [
    "src",
    "lib",
    "vite.config.js"
  ]
}